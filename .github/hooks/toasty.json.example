{
  "version": 1,
  "hooks": {
    "sessionStart": [
      {
        "type": "command",
        "bash": "toasty 'Copilot task complete' -t 'GitHub Copilot'",
        "powershell": "C:\\path\\to\\toasty.exe 'Copilot task complete' -t 'GitHub Copilot'",
        "timeoutSec": 5
      }
    ],
    "sessionEnd": [
      {
        "type": "command",
        "bash": "toasty 'Copilot session ended' -t 'GitHub Copilot'",
        "powershell": "C:\\path\\to\\toasty.exe 'Copilot session ended' -t 'GitHub Copilot'",
        "timeoutSec": 5
      }
    ]
  }
}
